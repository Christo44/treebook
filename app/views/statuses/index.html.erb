<div class="page-header">
  <h1>All statuses</h1>
</div>


<ul class="statuses">
  <% @statuses.each do |status| %>
  <li>
    <div class="content">
      <h4><%= status.user.full_name %></h4>
      <p><%= status.content %></p>
      <p><%= link_to time_ago_in_words(status.created_at) + " ago", status  %></p>
    </div>


    <div class="meta">

      <%= link_to 'Show', status %>
      <%= link_to 'Edit', edit_status_path(status) %>
      <%= link_to 'Destroy', status, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  </li>
  <% end %>
</ul>

<div class="form-actions">
  <%= link_to 'Post a new status', new_status_path, class: 'btn blue_btn' %>
</div>